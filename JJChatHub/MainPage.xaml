<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JJChatHub.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label x:Name="LabelChatMessages"/>

            <Entry x:Name="LabelMyMessage"/>

            <Button Text="Send" Clicked="OnCounterClicked"/>

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
